{
  "name": "MECAZON-server",
  "image": "mcr.microsoft.com/vscode/devcontainers/base:0-focal",
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "18"
    }
  },
  "customizations": {
    "vscode": {
      "extensions": ["dbaeumer.vscode-eslint", "humao.rest-client"]
    }
  },
  "forwardPorts": [3000],
  "remoteEnv": {
    "MONGO_CLIENT_URI": "${localEnv:MONGO_DEV_CLIENT_URI}",
    "MONGO_SERVER_URI": "${localEnv:MONGO_DEV_SERVER_URI}",
    "postCreateCommand": "bash -c 'npm install && cp .devcontainer/devcontainer.env .env.production'",
    "shutdownAction": "none"
  }
}
